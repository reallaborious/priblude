 [ -d /var/www ] && dqq=/var/www;[ -d /usr/local/vesta ] && xrh=/home;find / /var $dqq $xrh  -maxdepth 1 -type d -exec bash -c 'bash -c "du -sh {} 2>/dev/null|egrep --color=always \"(^[0-9\,\.]+G|$)\"" & tmp=$!; (sleep 5; ps o pid,cmd ax|egrep -q "^\s*$tmp\s+bash"; [ $? -eq 0 ] && (kill -9 $tmp $(ps -o pid= --ppid $tmp) 2>/dev/null 1>/dev/null && echo -e "\033[1mtime limit {}\033[0m"))&' \; ;sleep 5.5; while read i;do  echo -e '\033[32m_____________\033[0m'; find $i  -maxdepth 1 -type d -exec bash -c 'bash -c "du -sh {} 2>/dev/null|egrep --color=always \"(^[0-9\,\.]+G|$)\"" & tmp=$!; (sleep 2; ps o pid,cmd ax|egrep -q "^\s*$tmp\s+bash"; [ $? -eq 0 ] && (kill -9 $tmp $(ps -o pid= --ppid $tmp) 2>/dev/null 1>/dev/null && echo -e "\033[1mtime limit {}\033[0m"))&' \; ;done

