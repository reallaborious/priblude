b=" | perl -lnpe '\$c+=1;s/(?<=name\=).+?(?=\s)/\ \033[31m$&\033[0m/;s/(?<=docroot\=)[\w\.\-\/\_]+/\ \033[32m$\033[0m/g;s/(?<=owner\=).+?(?=\s)/\ \033[34m$&\033[0m/;push(@users,\$&) if \$& not in @users;s/ip(addr)?\=/$&\ /g;s/(name|owner|docroot)\=\ //g;s/\ [\w\_\-]+(?=\=)/\33[1m$&\033[0m/g; END{print \"\033[31mDomains\033[0m: \".\$c.\" \033[31mUsers\033[0m: \". join \" \" ,@users}' 2>/dev/null"; [ -d /usr/local/ispmgr/ ] && alias dom="/usr/local/ispmgr/sbin/mgrtl wwwdomain $b" ; [ -d /usr/local/mgr5/ ] && alias dom="/usr/local/mgr5/sbin/mgrctl -m ispmgr webdomain $b"; [ -d /usr/local/veta/ ] && function dom { v-list-users |awk '{if(NR>2) print "echo "$1";v-list-web-domains "$1";echo"}'|sh; }
